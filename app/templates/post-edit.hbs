{{page-title "Edit Post"}}

<div class="mb-6 flex items-center justify-between">
  <h1 class="text-3xl font-bold tracking-tight">Edit ‘{{this.model.title}}’</h1>
  <LinkTo @route="post" @model={{this.model.id}} class="btn-secondary">Back</LinkTo>
</div>

<div class="card">
  <div class="card-body space-y-4">
    <PostForm @model={{this.model}} @onSave={{this.update}} />

    <div>
      <button type="button" {{on "click" this.delete}} data-test-destroy-button class="btn-secondary">
        Delete
      </button>
    </div>
  </div>
</div>
